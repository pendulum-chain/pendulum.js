{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "target": "es2019",
    "paths": {
      "@pendulum-chain/api": [
        "api/src"
      ],
      "@pendulum-chain/api/*": [
        "api/src/*"
      ],
      "@pendulum-chain/api-derive": [
        "api-derive/src"
      ],
      "@pendulum-chain/api-derive/*": [
        "api-derive/src/*"
      ],
      "@pendulum-chain/types": [
        "types/src"
      ],
      "@pendulum-chain/types/*": [
        "types/src/*"
      ],
      "@pendulum-chain/type-definitions": [
        "type-definitions/src"
      ],
      "@pendulum-chain/type-definitions/*": [
        "type-definitions/src/*"
      ],
      "@pendulum-chain/sdk-core":[
        "sdk-core/src"
      ],
      "@pendulum-chain/sdk-core/*": [
        "sdk-core/src/*"
      ]
    },
    "skipLibCheck": true
  }
 }
