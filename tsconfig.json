{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "examples/**",
    "scripts/**",
    "coverage/**"
  ],
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": ".",
    "allowJs": true,
    "noUnusedLocals": false,
    "paths": {
      "@pendulum-chain/api": [
        "packages/api/src"
      ],
      "@pendulum-chain/api/*": [
        "packages/api/src/*"
      ],
      "@pendulum-chain/api-derive": [
        "packages/api-derive/src"
      ],
      "@pendulum-chain/api-derive/*": [
        "packages/api-derive/src/*"
      ],
      "@pendulum-chain/types": [
        "packages/types/src"
      ],
      "@pendulum-chain/types/*": [
        "packages/types/src/*"
      ],
      "@pendulum-chain/type-definitions": [
        "packages/type-definitions/src"
      ],
      "@pendulum-chain/type-definitions/*": [
        "packages/type-definitions/src/*"
      ],
      "@pendulum-chain/sdk-core":[
        "packages/sdk-core/src"
      ],
      "@pendulum-chain/sdk-core/*": [
        "packages/sdk-core/src/*"
      ],
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
