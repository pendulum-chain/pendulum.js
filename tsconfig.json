{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "baseUrl": ".",
    "declaration": true,
    "noUnusedLocals": false,
    "paths": {
      "@pendulum-chain/api": [
        "packages/api/src"
      ],
      "@pendulum-chain/api/*": [
        "packages/api/src/*"
      ],
      "@pendulum-chain/api-derive": [
        "packages/api-derive/src"
      ],
      "@pendulum-chain/api-derive/*": [
        "packages/api-derive/src/*"
      ],
      "@pendulum-chain/types": [
        "packages/types/src"
      ],
      "@pendulum-chain/types/*": [
        "packages/types/src/*"
      ],
      "@pendulum-chain/type-definitions": [
        "packages/type-definitions/src"
      ],
      "@pendulum-chain/type-definitions/*": [
        "packages/type-definitions/src/*"
      ],
      "@pendulum-chain/sdk-core": [
        "packages/sdk-core/src"
      ],
      "@pendulum-chain/sdk-core/*": [
        "packages/sdk-core/src/*"
      ],
      "@pendulum-chain/typegen": [
        "packages/typegen/src"
      ],
      "@pendulum-chain/typegen/*": [
        "packages/typegen/src/*"
      ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
