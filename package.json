{
  "bugs": "https://github.com/pendulum-chain/pendulum.js/issues",
  "engines": {
    "yarn": "^1.10.1"
  },
  "homepage": "https://github.com/pendulum-chain/pendulum.js#readme",
  "license": "Apache-2.0",
  "packageManager": "yarn@3.1.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/pendulum-chain/pendulum.js.git"
  },
  "sideEffects": false,
  "version": "0.1.4",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "yarn build:interfaces && polkadot-dev-build-ts",
    "build:interfaces": "node -r ts-node/register -r tsconfig-paths/register packages/types/scripts/generateTypes.ts && node -r ts-node/register -r tsconfig-paths/register packages/type-definitions/scripts/generate.ts",
    "build:release": "node ./scripts/build-release.js",
    "check-deps": "./node_modules/@open-web3/util/scripts/check-deps.js yarn.lock @polkadot/ @open-web3/",
    "clean": "polkadot-dev-clean-build",
    "lint": "polkadot-dev-run-lint",
    "postinstall": "polkadot-dev-yarn-only",
    "run-example": "ts-node -r tsconfig-paths/register examples/index.ts",
    "test": "polkadot-dev-run-test --coverage --passWithNoTests",
    "update-metadata": "ts-node --project ./tsconfig.json packages/types/scripts/updateMetadata.ts",
    "update-metadata-local": "ENDPOINT=ws://127.0.0.1:9944 ts-node --project ./tsconfig.json packages/types/scripts/updateMetadata.ts",
    "generate:defs": "ts-node -r tsconfig-paths/register node_modules/.bin/polkadot-types-from-defs --package @pendulum-chain/types/interfaces --input packages/types/src/interfaces --endpoint packages/types/src/metadata/static-latest.json",
    "generate:meta": "ts-node -r tsconfig-paths/register node_modules/.bin/polkadot-types-from-chain --package @pendulum-chain/types/interfaces --output packages/types/src/interfaces --endpoint packages/types/src/metadata/static-latest.json",
    "update-types": "yarn update-metadata-local && yarn generate:defs && yarn generate:meta",
    "publish-types": "cd ./packages/types && node ./scripts/publishTypes.js",
    "update-version": "node scripts/update-version.js patch",
    "publish": "GITHUB_REPOSITORY=pendulum-chain/pendulum.js GITHUB_REF=main NPM_TOKEN=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 node ./scripts/build-release.js"
  },
  "dependencies": {
    "ts-proto": "^1.82.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/register": "^7.13.6",
    "@babel/runtime": "^7.14.0",
    "@open-web3/dev-config": "^0.1.13",
    "@open-web3/util": "^1.1.4",
    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-node": "^8.6.1",
    "tsconfig-paths": "^3.12.0"
  },
  "resolutions": {
    "bn.js": "4.12",
    "typescript": "^4.6.2",
    "@polkadot/api": "^9.9.1",
    "@polkadot/typegen": "^9.9.1",
    "@polkadot/types-codec": "^9.9.1",
    "@polkadot/api-derive": "^9.9.1"
  }
}
